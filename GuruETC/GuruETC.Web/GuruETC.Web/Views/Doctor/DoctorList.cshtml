@model IEnumerable<GuruETC.DB.DoctorProfile>

@{
    ViewBag.Title = "DoctorList";
}

<h2>DoctorList</h2>

<p>
    @Html.ActionLink("Register Doctor", "AddDoctor")
</p>
<table>
    <tr>
      
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Practice)
        </th>
        <th>
        Edit
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Practice)
        </td>
       
        <td>
           <a href="@Url.Action("Edit", new {id=item.Id })"><img src="../../Images/Modify.png" alt="Edit" /></a> 
          
        </td>
    </tr>
}

</table>
