@model IEnumerable<GuruETC.DB.PatientProfile>
@{
    ViewBag.Title = "PatientList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    PatientList</h2>
<label for="kwd_search">
    Search with any column(Name, DOB, PhoneNumber etc.):</label>
<input type="text" id="kwd_search" value="" />
<table id="my-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address1)
        </th>
        <th>
            Edit
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">
                    <img src="../../Images/Modify.png" alt="Edit" /></a> @* <a href="@Url.Action("Delete", new { id = item.Id })"><img src="../../Images/Cancel.png" alt="Edit" /></a>*@
            </td>
        </tr>
    }
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $("#kwd_search").keyup(function () {
            var term = $(this).val()
            if (term != "") {
                $("#my-table tbody>tr").hide();
                $("#my-table td").filter(function () {
                    return $(this).text().toLowerCase().indexOf(term) > -1
                }).parent("tr").show();
            }
            else {
                $("#my-table tbody>tr").show();
            }
        });
    });
</script>
